<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cap√≠tulos - <%= story.title %></title>
    <link rel="stylesheet" href="/css/style.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700;900&display=swap"
      rel="stylesheet"
    />
    <style>
      .tree-view {
        font-family: "Courier New", monospace;
        background: var(--deep-charcoal);
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 20px;
      }
      .tree-chapter {
        margin-bottom: 15px;
        padding: 12px 15px;
        background: var(--dark-slate);
        border-left: 3px solid var(--burnt-orange);
        border-radius: 6px;
      }
      .tree-chapter-header {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 8px;
        flex-wrap: wrap;
      }
      .tree-chapter-title {
        color: var(--golden-accent);
        font-size: 0.95em;
        font-weight: 700;
        flex: 1;
        min-width: 200px;
      }
      .tree-chapter-number {
        background: var(--burnt-orange);
        color: white;
        padding: 3px 10px;
        border-radius: 4px;
        font-size: 0.8em;
        font-weight: 700;
      }
      .tree-actions {
        display: flex;
        gap: 5px;
      }
      .tree-actions .btn {
        padding: 4px 10px;
        font-size: 0.75em;
      }
      .tree-choice {
        margin-left: 20px;
        padding: 8px 12px;
        background: rgba(201, 169, 97, 0.1);
        border-left: 2px solid var(--golden-accent);
        margin-top: 8px;
        border-radius: 4px;
        font-size: 0.85em;
      }
      .tree-choice-text {
        color: var(--off-white);
        margin-bottom: 4px;
      }
      .tree-choice-target {
        color: var(--golden-accent);
        font-size: 0.9em;
        font-style: italic;
      }
      .tree-choice-target a {
        color: var(--golden-accent);
        text-decoration: none;
      }
      .tree-choice-target a:hover {
        text-decoration: underline;
      }
      .view-toggle {
        margin-bottom: 20px;
      }
      .list-view {
        display: none;
      }
      .tree-view.active,
      .list-view.active {
        display: block;
      }
    </style>
  </head>
  <body class="admin-page">
    <div class="admin-container">
      <header class="admin-header">
        <h1>üìñ Cap√≠tulos: <%= story.title %></h1>
        <div class="admin-user">
          <a href="/admin" class="btn btn-small btn-secondary"
            >‚Üê Voltar ao Painel</a
          >
        </div>
      </header>

      <div class="admin-actions">
        <a
          href="/admin/story/<%= story.id %>/chapter/new"
          class="btn btn-success"
        >
          ‚úçÔ∏è Novo Cap√≠tulo
        </a>
        <a href="/admin/story/edit/<%= story.id %>" class="btn btn-secondary">
          ‚öôÔ∏è Editar Hist√≥ria
        </a>
        <a
          href="/read/<%= story.id %>"
          class="btn btn-secondary"
          target="_blank"
        >
          üëÅÔ∏è Ler Hist√≥ria
        </a>
      </div>

      <div class="admin-content">
        <div class="view-toggle">
          <button
            onclick="toggleView('tree')"
            id="btnTree"
            class="btn btn-small btn-primary"
            style="margin-right: 10px"
          >
            üå≥ Visualiza√ß√£o em √Årvore
          </button>
          <button
            onclick="toggleView('list')"
            id="btnList"
            class="btn btn-small btn-secondary"
          >
            üìã Visualiza√ß√£o em Lista
          </button>
        </div>

        <h2>Cap√≠tulos (<%= chapters.length %>)</h2>

        <% if (chapters.length === 0) { %>
        <div class="empty-state">
          <p>Esta hist√≥ria ainda n√£o tem cap√≠tulos.</p>
          <a
            href="/admin/story/<%= story.id %>/chapter/new"
            class="btn btn-primary"
          >
            Criar primeiro cap√≠tulo
          </a>
        </div>
        <% } else { %>

        <!-- VISUALIZA√á√ÉO EM √ÅRVORE -->
        <div class="tree-view active" id="treeView">
          <% chapters.forEach(chapter => { %>
          <div class="tree-chapter">
            <div class="tree-chapter-header">
              <span class="tree-chapter-number"
                >Cap. <%= chapter.chapter_number %></span
              >
              <span class="tree-chapter-title">
                <%= chapter.title %> <% if (chapter.is_ending) { %>
                <span style="color: var(--rose-gold); font-size: 0.85em"
                  >‚ú®</span
                >
                <% } %>
              </span>
              <div class="tree-actions">
                <a
                  href="/admin/story/<%= story.id %>/chapter/<%= chapter.id %>/choices"
                  class="btn btn-small btn-primary"
                  >üí≠</a
                >
                <a
                  href="/admin/story/<%= story.id %>/chapter/edit/<%= chapter.id %>"
                  class="btn btn-small btn-secondary"
                  >‚úèÔ∏è</a
                >
              </div>
            </div>

            <% if (chapter.choices && chapter.choices.length > 0) { %> <%
            chapter.choices.forEach(choice => { %>
            <div class="tree-choice">
              <div class="tree-choice-text">‚Ü≥ <%= choice.choice_text %></div>
              <div class="tree-choice-target">
                <% if (choice.next_chapter_id) { %> <% const targetChapter =
                chapters.find(c => String(c._id) ===
                String(choice.next_chapter_id)); %> <% if (targetChapter) { %> ‚Üí
                <a href="#cap-<%= targetChapter.id %>"
                  >Cap. <%= targetChapter.chapter_number %>: <%=
                  targetChapter.title %></a
                >
                <% } else { %> ‚Üí Cap√≠tulo n√£o encontrado <% } %> <% } else { %>
                ‚Üí üìù Pendente <% } %>
              </div>
            </div>
            <% }); %> <% } %>
          </div>
          <% }); %>
        </div>

        <!-- VISUALIZA√á√ÉO EM LISTA (ORIGINAL) -->
        <ul class="chapter-list list-view" id="listView">
          <% chapters.forEach(chapter => { %>
          <li class="chapter-item" id="cap-<%= chapter.id %>">
            <div class="chapter-item-header">
              <h3 class="chapter-item-title">
                <%= chapter.title %> <% if (chapter.is_ending) { %>
                <span style="color: var(--rose-gold); font-size: 0.8em"
                  >‚ú® (Final)</span
                >
                <% } %>
              </h3>
              <span class="chapter-item-number"
                >Cap. <%= chapter.chapter_number %></span
              >
            </div>
            <p style="color: var(--text-medium); margin-top: 10px">
              <%= chapter.content.substring(0, 150) %>...
            </p>
            <div class="chapter-item-actions">
              <a
                href="/admin/story/<%= story.id %>/chapter/<%= chapter.id %>/choices"
                class="btn btn-small btn-primary"
              >
                Gerenciar Escolhas
              </a>
              <a
                href="/admin/story/<%= story.id %>/chapter/edit/<%= chapter.id %>"
                class="btn btn-small btn-secondary"
              >
                Editar
              </a>
              <form
                method="POST"
                action="/admin/story/<%= story.id %>/chapter/delete/<%= chapter.id %>"
                style="display: inline"
              >
                <button
                  type="submit"
                  class="btn btn-small btn-danger"
                  onclick="return confirm('Tem certeza que deseja excluir este cap√≠tulo?')"
                >
                  Excluir
                </button>
              </form>
            </div>
          </li>
          <% }); %>
        </ul>
        <% } %>
      </div>
    </div>

    <script>
      function toggleView(view) {
        const treeView = document.getElementById("treeView");
        const listView = document.getElementById("listView");
        const btnTree = document.getElementById("btnTree");
        const btnList = document.getElementById("btnList");

        if (view === "tree") {
          treeView.classList.add("active");
          listView.classList.remove("active");
          btnTree.classList.remove("btn-secondary");
          btnTree.classList.add("btn-primary");
          btnList.classList.remove("btn-primary");
          btnList.classList.add("btn-secondary");
          localStorage.setItem("chaptersView", "tree");
        } else {
          treeView.classList.remove("active");
          listView.classList.add("active");
          btnList.classList.remove("btn-secondary");
          btnList.classList.add("btn-primary");
          btnTree.classList.remove("btn-primary");
          btnTree.classList.add("btn-secondary");
          localStorage.setItem("chaptersView", "list");
        }
      }

      // Restaurar visualiza√ß√£o preferida
      window.addEventListener("DOMContentLoaded", () => {
        const savedView = localStorage.getItem("chaptersView") || "tree";
        if (savedView === "list") {
          toggleView("list");
        }
      });
    </script>
  </body>
</html>
